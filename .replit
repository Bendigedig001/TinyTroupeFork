modules = ["web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "cargo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libiconv", "libxcrypt", "pandoc", "pkg-config", "qhull", "rustc", "tcl", "tk", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Jupyter Notebook"

[[workflows.workflow]]
name = "Jupyter Notebook"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "JUPYTER_CONFIG_DIR=.jupyter jupyter lab --config=.jupyter/jupyter_notebook_config.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["jupyter", "lab", "--ip=0.0.0.0", "--port=5000", "--no-browser", "--allow-root", "--NotebookApp.token=", "--NotebookApp.password=", "--ServerApp.disable_check_xsrf=True", "--ServerApp.allow_origin=*"]
